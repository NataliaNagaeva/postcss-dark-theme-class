{
  "name": "postcss-dark-theme-class",
  "version": "0.7.1",
  "description": "PostCSS plugin to make dark/light theme switcher by copying styles from media query to special class",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "dark",
    "dark-theme"
  ],
  "scripts": {
    "test": "jest --coverage && eslint ."
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/postcss-dark-theme-class",
  "engines": {
    "node": ">=12.0"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "peerDependencies": {
    "postcss": "^8.2.14"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.4.7",
    "clean-publish": "^2.2.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "jest": "^27.1.1",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "postcss-sharec-config": "^0.4.1",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.6.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-non-literal-regexp": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "sharec": {
    "config": "postcss-sharec-config",
    "version": "0.4.1"
  }
}
