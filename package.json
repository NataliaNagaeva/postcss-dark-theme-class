{
  "name": "postcss-dark-theme-class",
  "version": "0.7.3",
  "description": "CSS solution for light/dark/auto theme switcher for websites",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "dark",
    "dark-theme",
    "light",
    "auto-theme",
    "theme-switcher"
  ],
  "scripts": {
    "unit": "uvu . '\\.test\\.js$'",
    "test": "c8 pnpm unit && eslint ."
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/postcss-dark-theme-class",
  "engines": {
    "node": ">=12.0"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "peerDependencies": {
    "postcss": "^8.2.14"
  },
  "devDependencies": {
    "@logux/eslint-config": "^48.0.0",
    "c8": "^7.12.0",
    "clean-publish": "^4.0.1",
    "eslint": "^8.29.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "postcss": "^8.4.19",
    "uvu": "^0.5.6"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-non-literal-regexp": "off"
    }
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "reporter": "lcov",
    "check-coverage": true
  },
  "clean-publish": {
    "cleanDocs": true
  }
}
